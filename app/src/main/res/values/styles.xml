<resources>

    <style name="Widget.Application.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primaryDark</item>
    </style>

    <style name="Widget.Application.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/bottomNavigation</item>
        <item name="itemTextColor">@drawable/navigation_item_color</item>
        <item name="itemIconTint">@drawable/navigation_item_color</item>
    </style>

    <style name="Widget.Application.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/material_color_white</item>
    </style>

    <style name="Widget.Application.Button.ButtonBar" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@drawable/btn_borderless</item>
    </style>

    <style name="Widget.Application.Button.Container" parent="Widget.Application.Button">
        <item name="android:background">@drawable/btn_container</item>
    </style>

    <style name="Widget.Application.Subheader" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/material_subheader_text_size</item>
        <item name="android:textColor">@color/material_subheader_text_color_default</item>
        <item name="android:minHeight">@dimen/material_subheader_height</item>
        <item name="android:paddingStart">@dimen/material_subheader_padding_start</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.Application.Subheader.Container">
        <item name="android:textSize">@dimen/material_typography_regular_title_text_size</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="Widget.Application.ProgressBar" parent="Widget.AppCompat.ProgressBar">
    </style>

    <style name="TextAppearance.Application.ListItem" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/material_list_normal_primary_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Application.ListItemSecondary" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/material_list_normal_secondary_text_size</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Application.Label" parent="TextAppearance.Application.ListItemSecondary">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Application.Value" parent="TextAppearance.Application.Label">
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.Application.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">?android:attr/textColorSecondary</item>
        <item name="android:tintMode">multiply</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="Widget.Application.Button.Borderless.Colored">
        <item name="android:tint">?attr/colorAccent</item>
        <item name="android:tintMode">src_in</item>
    </style>

    <style name="TextAppearance.Application.Error" parent="TextAppearance.Design.Error">
    </style>

    <style name="Widget.Application.MenuItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:paddingStart">?attr/dialogPreferredPadding</item>
        <item name="android:paddingEnd">?attr/dialogPreferredPadding</item>
        <item name="android:drawablePadding">@dimen/material_baseline_grid_1x</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:minHeight">@dimen/material_button_touch_target_height_minimum</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/material_color_white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.Application.SignatureAddMethod" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/material_button_touch_target_height_minimum</item>
        <item name="android:background">@drawable/signature_add_method_background</item>
        <item name="android:textColor">@drawable/signature_add_method_text</item>
    </style>

    <style name="Widget.Application.EID.Title" parent="Widget.Application.Subheader.Container">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@null</item>
    </style>

    <style name="Widget.Application.EID.Link" parent="TextAppearance.AppCompat">
        <item name="android:minHeight">@dimen/material_button_touch_target_height_minimum</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.Application.EID.Error" parent="TextAppearance.Application.Error">
        <item name="android:paddingTop">@dimen/material_baseline_grid_0.5x</item>
        <item name="android:paddingBottom">@dimen/material_baseline_grid_0.5x</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Application.EID.Button.Positive" parent="Widget.Application.Button.Container">
    </style>

    <style name="Widget.Application.EID.Button.Negative" parent="Widget.Application.EID.Button.Positive">
        <item name="android:background">@drawable/btn_eid_negative</item>
    </style>

</resources>
